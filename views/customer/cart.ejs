<%- include('../partials/head') %>
<%- include('../partials/header') %>
    <h1 class="main__title">Cart - <%= price %> €</h1>
    <p>List of my products (<%= products.length %>)</p>
    <section class="main__article">
        <% if (products.length > 0) { %>
            <% for (let i = 0; i < products.length; i++) { %>
                <article class="article">
                    <header class="article__header">
                        <div class="article__header__img__container">
                            <img src="<%= products[i].img_url ? products[i].img_url : '/img/default.jpg' %>" alt="">
                        </div>
                        <h2 class="article__header__title">
                            <%= products[i].title %>
                        </h2>
                    </header>
                    <div class="article__desc">
                        <p class="article__desc__name">
                            <span>Name:</span>
                            <%= products[i].name %>
                        </p>
                        <p class="article__desc__name">
                            <span>Quantity:</span>
                            <%= products[i].quantity %>
                        </p>
                        <p class="article__desc__price">
                            <span>Price:</span>
                            <%= products[i].price ? products[i].price : 'N/C' %>
                            €
                        </p>
                        <p class="article__desc__desc">
                            <span>Description:</span>
                            <%= products[i].description ? products[i].description : 'N/C' %>
                        </p>
                    </div>
                    <div class="article__footer">
                        <a href="/cart/product_detail/<%= products[i].id_product %>" class="article__footer__link__detail">Detail</a>
                        <form action="/cart/delete_to_cart" method="POST" class="article__footer__form__add">
                            <button type="detele">Delete to cart</button>
                            <input type="hidden" name="id" class="hidden" value="<%= products[i].id_product %>">
                        </form>
                    </div>
                </article>
            <% } %>
        <% } else { %>
            <p>No products found in your cart</p>
        <% } %>
    </section>
<%- include('../partials/footer') %>